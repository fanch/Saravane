release=1
source=(http://xorg.freedesktop.org/archive/individual/app/xrdb-$version.tar.bz2)

build() {
cd xrdb-$version
./configure --prefix=/usr --with-cpp=/usr/bin/mcpp
make
make DESTDIR=$PKG install
}
