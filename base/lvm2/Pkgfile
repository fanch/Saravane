release=1

source=(ftp://sources.redhat.com/pub/lvm2/LVM2.$version.tgz)
build() {
cd LVM2.$version
./configure \
--prefix=/usr \
--exec-prefix= \
--with-confdir=/etc \
--mandir=/usr/share/man \
--enable-applib \
--enable-cmdlib \
--enable-pkgconfig \
--enable-udev_sync
make
make DESTDIR=$PKG install
}
